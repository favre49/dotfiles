source "~/.config/mutt/accounts/personal/info"

unset imap_passive

# Create header cache
set header_cache=~/.mutt_cache

# Keep the IMAP connection alive by polling intermittently (time in seconds).
set imap_keepalive = 300

# Maintain sane ordering
set sort=threads
set sort_browser=date
set sort_aux=reverse-last-date-received

# Turn on sidebar
set sidebar_visible
set sidebar_format = "%B%?F? [%F]?%* %?N?%N/?%S"
set mail_check_stats

# Index keybindings
bind index g noop
bind index gg first-entry
bind index G last-entry

bind index R group-reply
bind index <tab> sync-mailbox
bind index <space> collapse-thread
bind index _ collapse-all

# Ctrl-R to mark all as read
macro index \Cr "T~U<enter><tag-prefix><clear-flag>N<untag-pattern>.<enter>" "mark all messages as read"

# Saner copy/move dialogs
macro index C "<copy-message>?<toggle-mailboxes>" "copy a message to a mailbox"
macro index M "<save-message>?<toggle-mailboxes>" "move a message to a mailbox"

# Some notmuch bindings
macro index A "<modify-labels>+archived -unread -inbox\\n" "Archive message"
macro index \\\\ "<vfolder-from-query>" "Search mailbox"

# Sidebar Navigation
bind index,pager <down>   sidebar-next
bind index,pager <up>     sidebar-prev
bind index,pager <right>  sidebar-open

# Pager View Options ---------------------------------
set pager_index_lines = 10 # number of index lines to show
set pager_context = 3      # number of context lines to show
set pager_stop             # don't go to next message automatically
set menu_scroll            # scroll in menus
set tilde                  # show tildes like in vim
unset markers              # no ugly plus signs

set quote_regexp = "^( {0,4}[>|:#%]| {0,4}[a-z0-9]+[>|]+)+"
alternative_order text/plain text/enriched text/html

# Pager Key Bindings ---------------------------------
bind pager k  previous-line
bind pager j  next-line
bind pager g noop
bind pager gg top
bind pager G  bottom

bind pager R  group-reply

# View attachments properly.
set mailcap_path = ~/.config/mutt/mailcap
alternative_order text/plain text/html
auto_view text/html
bind attach <return> view-mailcap

# Compose View options
set realname = "Rahul Prabhu"
set envelope_from
set sig_dashes
set edit_headers
set fast_reply
set askcc
set fcc_attach
unset mime_forward
set forward_format = "Fwd: %s"
set forward_decode
#set attribution = "On %d, %n wrote"
set reply_to
set reverse_name
set include
set forward_quote
set text_flowed
set editor = "nvim"

# Drafts settings
bind compose p postpone-message
bind index p recall-message

# Colors
source ~/.config/mutt/dracula.muttrc

# Switch accounts
macro index <f3> '<sync-mailbox><enter-command>source ~/.config/mutt/accounts/personal/info<enter><change-folder>!<enter><right>'
macro index <f4> '<sync-mailbox><enter-command>source ~/.config/mutt/accounts/bits/info<enter><change-folder>!<enter><right>'

## Abook
set query_command= "abook --mutt-query '%s'"
macro index,pager  a "<pipe-message>abook --add-email-quiet<return>" "Add this sender to Abook"
bind editor        <Tab> complete-query

