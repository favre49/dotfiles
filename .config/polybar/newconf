[module/mail]
type = custom/script

exec = ~/.config/polybar/scripts/mail.sh

format-foreground = ${colors.base00}
format-padding = 1

[module/spotify]
type = custom/script
interval = 1
format-prefix = "ï€ "
format = <label>
format-foreground = ${colors.base00}
exec = python ~/.config/polybar/scripts/spotify_status.py -f '{artist}: {song}'

[module/updates-arch-combined]
