[module/bspwm]
type = internal/bspwm

pin-workspaces = true

ws-icon-0 = I;ï„‘
ws-icon-1 = II;ï„‘
ws-icon-2 = III;ï„‘
ws-icon-3 = IV;ï„‘
ws-icon-4 = V;ï„‘
ws-icon-5 = VI;ï„‘
ws-icon-6 = VII;ï„‘
ws-icon-7 = VIII;ï„‘

label-focused = %icon%
label-focused-background = ${colors.base2}
label-focused-foreground = ${colors.cyan}
label-focused-padding = 2

label-occupied = %icon%
label-occupied-padding = 2

label-urgent = %icon%!
label-urgent-background = ${colors.base00}
label-urgent-padding = 2

label-empty = %icon%
label-empty-foreground = ${colors.base00}
label-empty-padding = 2

[module/wlan]
type = internal/network
interface = wlp7s0
interval = 3.0

format-connected = <ramp-signal> <label-connected>
label-connected = %essid%

format-padding = 1

format-disconnected =
;format-disconnected = <label-disconnected>
;format-disconnected-underline = ${self.format-connected-underline}
;label-disconnected = %ifname% disconnected
;label-disconnected-foreground = ${colors.foreground-alt}

ramp-signal-0 = îˆ˜
ramp-signal-1 = îˆ™
ramp-signal-2 = îˆš
ramp-signal-3 = îˆš
ramp-signal-4 = îˆš
ramp-signal-foreground = ${colors.base00}

[module/date]
type = internal/date
interval = 5

date = "%A, %d %B"
date-alt = " %Y-%m-%d"

time = "%H:%M"
time-alt = %H:%M:%S

format = <label>
format-background = ${colors.base2}
format-foreground = ${colors.base0}

label = %date% at %time%
label-foreground = ${colors.base00}

[module/pulseaudio]
type = internal/pulseaudio

