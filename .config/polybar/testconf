[colors]

; Darker hex color palette
purplehero-black = #1c1a1c
purplehero-purple-grey = #3b3147
purplehero-purple = #4f315a
purplehero-cream = #6c4f6f
purplehero-light-grey = #56466c

; Brighter hex color palette
crossroads-darkblue = #1d114f
crossroads-darkpurple = #40195c
crossroads-purple = #5d296b
crossroads-lighterpurple = #8b3d88
crossroads-brightpurple = #a14498

[bar/test]
;monitor = ${env:MONITOR:HDMI-1}
width = 100%
height = 27
;offset-x = 1%
;offset-y = 1%
;radius = 6.0
fixed-center = true

background = ${colors.purplehero-black}
foreground = ${colors.crossroads-lighterpurple}

line-size = 3
line-color = #f00

border-size = 4
border-color = #00000000

padding-left = 0
padding-right = 2

module-margin-left = 1
module-margin-right = 2

font-0 = fixed:pixelsize=10;1
font-1 = unifont:fontformat=truetype:size=8:antialias=false;0
font-2 = siji:pixelsize=10;1

modules-left = i3
modules-center = date
modules-right = pulseaudio wlan battery powerbutton

tray-position = right
tray-padding = 2
;tray-background = #0063ff

cursor-click = pointer
cursor-scroll = ns-resize

[module/i3]
type = internal/i3
format = <label-state> <label-mode>
index-sort = true
wrapping-scroll = false

; Only show workspaces on the same output as the bar
;pin-workspaces = true

label-mode-padding = 2
label-mode-foreground = #000
label-mode-background = ${colors.crossroads-lighterpurple}

; focused = Active workspace on focused monitor
label-focused = %index%
;label-focused-background = ${colors.purplehero-black}
label-focused-background = #222
label-focused-underline= ${colors.crossroads-lighterpurple}
label-focused-padding = 2

; unfocused = Inactive workspace on any monitor
label-unfocused = %index%
label-unfocused-padding = 2

; visible = Active workspace on unfocused monitor
label-visible = %index%
label-visible-background = ${self.label-focused-background}
label-visible-underline = ${self.label-focused-underline}
label-visible-padding = ${self.label-focused-padding}

; urgent = Workspace with urgency hint set
label-urgent = %index%
label-urgent-background = ${colors.crossroads-brightpurple}
label-urgent-padding = 2

; Separator in between workspaces
; label-separator = |

[module/date]
type = internal/date

interval = 1.0

time = %I:%M %P 
date = %d %b

label = %time% on %date%

[module/powerbutton]
type=custom/text
content = 

click-left = qdbus org.kde.ksmserver /KSMServer logout 1 0 3

[module/battery]
type = internal/battery
battery = BAT0
adapter = ADP0
full-at = 98

format-charging = <animation-charging> <label-charging>
format-charging-underline = #8b3d88

format-discharging = <animation-discharging> <label-discharging>
format-discharging-underline = ${self.format-charging-underline}

format-full-prefix = " "
format-full-prefix-foreground = ${colors.crossroads-purple}
format-full-underline = ${self.format-charging-underline}

ramp-capacity-0 = 
ramp-capacity-1 = 
ramp-capacity-2 = 
ramp-capacity-foreground = ${colors.crossroads-lighterpurple}

animation-charging-0 = 
animation-charging-1 = 
animation-charging-2 = 
animation-charging-foreground = ${colors.crossroads-lighterpurple}
