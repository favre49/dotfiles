struct edge {
  int u,v;
  bool bridge;
};

// Finds bridges in O(N+M)
struct Bridges {
  vector<vector<int>> adj;
  vector<edge> edges;
  vector<int> tin, low;
  vector<bool> visited;
  int timer, _n;
  Bridges(int n):_n(n) {
    adj.resize(n);
    visited.resize(n);
    tin.assign(n,-1);
    low.assign(n,-1);
    timer = 0;
  }
  void add_edge(int u, int v) {
    adj[u].push_back(edges.size());
    adj[v].push_back(edges.size());
    edges.push_back({u,v,0}); // Change constructor as necessary
  }
  void find_bridges(int v, int p = -1) {
    for (int i = 0; i < _n; i++) 
      if (!visited[i])
        dfs(i);
  }
  void dfs(int v, int p = -1) {
    visited[v] = true;
    tin[v] = low[v] = timer++;
    for (int e : adj[v]) 
    {
      int to = edges[e].u^edges[e].v^v;
      if (to==p) continue;
      if (visited[to]) {
        low[v] = min(low[v],tin[to]);
      } else {
        dfs(to,v);
        low[v] = min(low[v],low[to]);
        if (low[to] > tin[v]) // is a bridge
          edges[e].bridge = true;
      }
    }
  }
};
endsnippet

snippet djikstra
struct Djikstra {
  int n;
  const ll INF = 1e16;
  vector<ll> d;
  vector<int> pred;
  vector<vector<pii>> adj;
  vector<vector<pii>> revadj;
  
  Djikstra(int _n):n(_n) {
    d.resize(n); pred.resize(n); adj.resize(n); revadj.resize(n);
  }
  void add_edge(int u, int v, int w) {
    adj[u].push_back({v,w}); revadj[v].push_back({u,w});
  }
  void djikstra(int s) {
    for (int i = 0; i< n; i++) pred[i] = -1, d[i] = INF; // reset
    d[s] = 0;
    priority_queue<pii,vector<pii>,greater<pii>> q;
    q.push({0,s});
    while(!q.empty()) {
      auto [d_v,v] = q.top();
      q.pop();
      if (d[v] != d_v) continue;
      for (auto [to,len] : adj[v]) {
        if (d[v]+len < d[to]) {
          d[to] = d[v]+len;
          pred[to] = v;
          q.push({d[to],to});
        }        
      }
    }
  }
};
endsnippet
