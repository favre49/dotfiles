[module/date]
type = internal/date
interval = 5

date = "%A, %d %B"
date-alt = " %Y-%m-%d"

time = "%H:%M"
time-alt = %H:%M:%S

format = <label>
format-background = ${colors.background}
format-foreground = ${colors.foreground}

label = %date% at %time%
label-foreground = ${colors.foreground}

[module/pulseaudio]
